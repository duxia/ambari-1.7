<configuration supports_final="true">
  <property>
    <name>java.library.path|jstorm</name>
    <value>/usr/local/lib:/opt/local/lib:/usr/lib</value>
    <description>JVM path</description>
  </property>
  <property>
    <name>storm.local.dir|jstorm</name>
    <value>/usr/local/services/jstorm</value>
    <description>Jstorm 本地路径</description>
  </property>
  <property>
    <name>_storm.conf.dir|jstorm</name>
    <value>/usr/local/services/jstorm/conf</value>
    <description>Jstorm 配置文件本地路径</description>
  </property>
  <property>
    <name>_storm.tomcat.dir|jstorm</name>
    <value>/usr/local/services/tomcat</value>
    <description>Jstorm UI 依赖的Tomcat根路径</description>
  </property>
  <property>
    <name>storm.zookeeper.servers|jstorm</name>
    <value>[host1,host2]</value>
    <description>zk 服务主机名列表</description>
  </property>
  <property>
    <name>storm.zookeeper.port|jstorm</name>
    <value>2181</value>
    <description>zk 服务端口名列表</description>
  </property>
  <property>
    <name>storm.zookeeper.root|jstorm</name>
    <value>/jstorm</value>
    <description>jstorm服务在zk中的根路径</description>
  </property>
  <property>
    <name>storm.zookeeper.session.timeout|jstorm</name>
    <value>20000</value>
    <description>zk客户端回话超时时间(ms)</description>
  </property>
  <property>
    <name>storm.zookeeper.connection.timeout|jstorm</name>
    <value>15000</value>
    <description>zk客户端连接超时时间(ms)</description>
  </property>
  <property>
    <name>nimbus.host|jstorm</name>
    <value>127.0.0.1</value>
    <description>nimbus主机地址</description>
  </property>
  <property>
    <name>supervisor.slots.ports|jstorm</name>
    <value>[6800, 6801]</value>
    <description>supervisor slot 端口号</description>
  </property>
  <property>
    <name>supervisor.slots.ports.base|jstorm</name>
    <value>6800</value>
    <description>supervisor slot 端口号起始值</description>
  </property>
  <property>
    <name>supervisor.slots.port.cpu.weight|jstorm</name>
    <value>1</value>
    <description>supervisor slot cpu权重</description>
  </property>
  <property>
    <name>worker.memory.size|jstorm</name>
    <value>536870912</value>
    <description>worker的jvm内存大小(byte)</description>
  </property>
  <property>
    <name>topology.performance.metrics|jstorm</name>
    <value>true</value>
    <description>是否开启性能监控</description>
  </property>
</configuration>
